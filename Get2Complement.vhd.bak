entity Get2Complement is
	-- decides whether to do 2s complement of the number or not
	-- if toSubtract is 1, we need to take 2s complement otherwise we don't need to
	port(
		in1, in2, in3, in4, in5, in6, in7, in8, in9, in10, in11, in12, in13, in14, in15, in16: in bit;
		toSubtract: in bit; 
		out1, out2, out3, out4, out5, out6, out7, out8, out9, out10, out11, out12, out13, out14, out15, out16: out bit;
		carry1: out bit
	);
end Get2Complement;

architecture Get2ComplementLogic of Get2Complement is 
	-- using XOR gate to decide
	component XOR_2input is
		port (
			a, b: in bit; 
			x: out bit 
		);
	begin
	-- writing logic 
	carry1 <= toSubtract;
	
	-- parallel XOR gates
	XORGate1 : XOR_2input port map (a => in1, b => toSubtract, x => out1);
	XORGate2 : XOR_2input port map (a => in2, b => toSubtract, x => out2);
	XORGate3 : XOR_2input port map (a => in3, b => toSubtract, x => out3);
	XORGate4 : XOR_2input port map (a => in4, b => toSubtract, x => out4);
	XORGate5 : XOR_2input port map (a => in5, b => toSubtract, x => out5);
	XORGate6 : XOR_2input port map (a => in6, b => toSubtract, x => out6);
	XORGate7 : XOR_2input port map (a => in7, b => toSubtract, x => out7);
	XORGate8 : XOR_2input port map (a => in8, b => toSubtract, x => out8);
	XORGate9 : XOR_2input port map (a => in9, b => toSubtract, x => out9);
	XORGate10 : XOR_2input port map (a => in10, b => toSubtract, x => out10);
	XORGate11 : XOR_2input port map (a => in11, b => toSubtract, x => out11);
	XORGate12 : XOR_2input port map (a => in12, b => toSubtract, x => out12);
	XORGate13 : XOR_2input port map (a => in13, b => toSubtract, x => out13);
	XORGate14 : XOR_2input port map (a => in14, b => toSubtract, x => out14);
	XORGate15 : XOR_2input port map (a => in15, b => toSubtract, x => out15);
	XORGate16 : XOR_2input port map (a => in16, b => toSubtract, x => out16);
	
end Get2ComplementLogic;
	
